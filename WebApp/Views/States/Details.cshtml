@model WebApp.Models.State

<div class="container mt-5">
    <!-- Page Heading -->
    <div class="text-center">
        <h1 class="display-4 fw-bold">State Details</h1>
        <p class="lead text-secondary">Comprehensive details about the state of <strong>@Model.StateName</strong>.</p>
        <hr class="my-4">
    </div>

    <!-- State Details Section -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-muted">General Information</h5>
    <dl class="row">
                        <dt class="col-sm-5">Name</dt>
                        <dd class="col-sm-7">@Model.StateName</dd>

                        <dt class="col-sm-5">Abbreviation</dt>
                        <dd class="col-sm-7">@Model.Abbreviation</dd>

                        <dt class="col-sm-5">Capital</dt>
                        <dd class="col-sm-7">@Model.Capital</dd>

                        <dt class="col-sm-5">Population</dt>
                        <dd class="col-sm-7">@Model.Population</dd>
                
                        <dt class="col-sm-5">Area</dt>
                        <dd class="col-sm-7">@Model.Area sq mi</dd>

                        <dt class="col-sm-5">Region</dt>
                        <dd class="col-sm-7">@Model.Region</dd>

                        <dt class="col-sm-5">Time Zones</dt>
                        <dd class="col-sm-7">@string.Join(", ", Model.TimeZones ?? new List<string>())</dd>
    </dl>
</div>
                <!-- State Flag -->
                <div class="col-md-6 text-center">
                    <h5 class="text-muted">State Flag</h5>
                    <img src="@Model.FlagUrl" alt="@Model.StateName flag" class="img-fluid rounded shadow" style="max-width: 100%; height: auto;">
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-primary me-3">Close</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Go to Home Page</a>
    </div>
</div>

